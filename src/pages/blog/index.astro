---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={`Blog - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
		<style>
			/* Page Header */
			.page-header {
				padding: 10rem 2rem 4rem;
				text-align: center;
				position: relative;
				overflow: hidden;
			}

			.page-header::before {
				content: '';
				position: absolute;
				top: 0;
				left: 50%;
				transform: translateX(-50%);
				width: 150%;
				height: 100%;
				background: 
					radial-gradient(ellipse at 50% 0%, rgba(139, 92, 246, 0.15) 0%, transparent 50%);
				pointer-events: none;
				z-index: -1;
			}

			.page-header h1 {
				font-size: clamp(2.5rem, 6vw, 4rem);
				margin-bottom: 1rem;
			}

			.page-header .lead {
				max-width: 600px;
				margin: 0 auto;
				font-size: 1.2rem;
				color: var(--text-secondary);
			}

			/* Blog List */
			.blog-section {
				max-width: 800px;
				margin: 0 auto;
				padding: 2rem 2rem 6rem;
			}

			.blog-list {
				list-style: none;
				padding: 0;
				margin: 0;
			}

			.blog-item {
				border-bottom: 1px solid var(--border-color);
				padding: 2rem 0;
				transition: all 0.3s ease;
			}

			.blog-item:first-child {
				padding-top: 0;
			}

			.blog-item:last-child {
				border-bottom: none;
			}

			.blog-link {
				display: block;
				text-decoration: none;
				color: inherit;
			}

			.blog-link:hover .blog-title {
				color: var(--primary-light);
			}

			.blog-meta {
				display: flex;
				align-items: center;
				gap: 1rem;
				margin-bottom: 0.75rem;
				font-size: 0.9rem;
				color: var(--text-muted);
			}

			.blog-date {
				color: var(--primary-light);
				font-weight: 500;
			}

			.blog-author {
				display: flex;
				align-items: center;
				gap: 0.5rem;
			}

			.blog-author::before {
				content: 'Â·';
				color: var(--text-muted);
			}

			.blog-title {
				font-size: 1.5rem;
				font-weight: 600;
				margin: 0 0 0.5rem 0;
				color: var(--text-primary);
				transition: color 0.3s ease;
				line-height: 1.4;
			}

			.blog-description {
				color: var(--text-secondary);
				margin: 0;
				line-height: 1.7;
				font-size: 1rem;
			}

			/* Empty State */
			.empty-state {
				text-align: center;
				padding: 4rem 2rem;
				color: var(--text-muted);
			}

			.empty-state h3 {
				color: var(--text-secondary);
				margin-bottom: 1rem;
			}

			@media (max-width: 768px) {
				.page-header {
					padding: 8rem 1rem 3rem;
				}

				.blog-section {
					padding: 1rem 1rem 4rem;
				}

				.blog-title {
					font-size: 1.25rem;
				}

				.blog-meta {
					flex-direction: column;
					align-items: flex-start;
					gap: 0.25rem;
				}

				.blog-author::before {
					display: none;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		
		<!-- Page Header -->
		<section class="page-header">
			<h1><span class="gradient-text">Insights</span></h1>
			<p class="lead">Thoughts on neuroscience, AI, and the future of human potential</p>
		</section>

		<!-- Blog List -->
		<section class="blog-section">
			{posts.length > 0 ? (
				<ul class="blog-list">
					{posts.map((post) => (
						<li class="blog-item">
							<a href={`/blog/${post.id}/`} class="blog-link">
								<div class="blog-meta">
									<span class="blog-date">
										<FormattedDate date={post.data.pubDate} />
									</span>
									{post.data.author && (
										<span class="blog-author">{post.data.author}</span>
									)}
								</div>
								<h2 class="blog-title">{post.data.title}</h2>
								{post.data.description && (
									<p class="blog-description">{post.data.description}</p>
								)}
							</a>
						</li>
					))}
				</ul>
			) : (
				<div class="empty-state">
					<h3>Coming Soon</h3>
					<p>We're working on some exciting content. Check back soon!</p>
				</div>
			)}
		</section>

		<Footer />
	</body>
</html>
