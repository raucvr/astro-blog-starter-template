---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';

type Props = CollectionEntry<'blog'>['data'];

const { title, description, pubDate, updatedDate, heroImage } = Astro.props;
---

<html lang="en">
	<head>
		<BaseHead title={title} description={description} />
		<style>
			/* Thinking Machines inspired blog layout - centered, clean */
			.article-header {
				max-width: 720px;
				margin: 0 auto;
				padding: 8rem 2rem 3rem;
				text-align: center;
			}

			.back-link {
				display: inline-flex;
				align-items: center;
				gap: 0.5rem;
				font-size: 0.875rem;
				color: var(--text-muted);
				text-decoration: none;
				margin-bottom: 3rem;
				transition: color 0.3s ease;
			}

			.back-link:hover {
				color: var(--text-primary);
			}

			.back-link svg {
				width: 14px;
				height: 14px;
			}

			.article-title {
				font-size: clamp(2rem, 5vw, 2.75rem);
				font-weight: 400;
				line-height: 1.3;
				letter-spacing: -0.02em;
				margin-bottom: 1.5rem;
				color: var(--text-primary);
			}

			.article-meta {
				display: flex;
				align-items: center;
				justify-content: center;
				gap: 1.5rem;
				margin-bottom: 2rem;
				padding-bottom: 2rem;
				border-bottom: 1px solid var(--border-color);
			}

			.article-author {
				font-size: 0.9375rem;
				font-weight: 400;
				color: var(--text-primary);
			}

			.article-date {
				font-size: 0.9375rem;
				font-weight: 300;
				color: var(--text-muted);
			}

			.hero-image {
				max-width: 900px;
				margin: 0 auto;
				padding: 0 2rem 3rem;
			}

			.hero-image img {
				display: block;
				width: 100%;
				height: auto;
				border-radius: 8px;
			}

			.article-content {
				max-width: 720px;
				margin: 0 auto;
				padding: 0 2rem 6rem;
			}

			.article-content h2 {
				font-size: 1.5rem;
				font-weight: 500;
				margin-top: 3rem;
				margin-bottom: 1rem;
				color: var(--text-primary);
			}

			.article-content h3 {
				font-size: 1.25rem;
				font-weight: 500;
				margin-top: 2.5rem;
				margin-bottom: 0.75rem;
				color: var(--text-primary);
			}

			.article-content p {
				font-size: 1.0625rem;
				line-height: 1.75;
				margin-bottom: 1.5rem;
				color: var(--text-secondary);
			}

			.article-content a {
				color: var(--text-primary);
				text-decoration: underline;
				text-underline-offset: 3px;
			}

			.article-content a:hover {
				color: var(--text-muted);
			}

			.article-content ul,
			.article-content ol {
				margin-bottom: 1.5rem;
				font-size: 1.0625rem;
				line-height: 1.75;
				color: var(--text-secondary);
			}

			.article-content li {
				margin-bottom: 0.75rem;
			}

			.article-content blockquote {
				font-size: 1.125rem;
				font-weight: 300;
				font-style: italic;
				border-left: 3px solid var(--text-primary);
				padding-left: 1.5rem;
				margin: 2rem 0;
				color: var(--text-secondary);
			}

			.article-content pre {
				background: var(--gray-100);
				border-radius: 8px;
				padding: 1.5rem;
				overflow-x: auto;
				margin: 2rem 0;
			}

			.article-content code {
				font-family: 'JetBrains Mono', monospace;
				font-size: 0.875rem;
			}

			.article-content hr {
				border: none;
				border-top: 1px solid var(--border-color);
				margin: 3rem 0;
			}

			.article-content img {
				max-width: 100%;
				height: auto;
				border-radius: 8px;
				margin: 2rem 0;
			}

			.article-content strong {
				font-weight: 600;
				color: var(--text-primary);
			}

			.updated-date {
				font-size: 0.875rem;
				color: var(--text-muted);
				font-style: italic;
				text-align: center;
				margin-top: 1rem;
			}

			@media (max-width: 768px) {
				.article-header {
					padding: 6rem 1.25rem 2rem;
				}

				.hero-image {
					padding: 0 1.25rem 2rem;
				}

				.article-content {
					padding: 0 1.25rem 4rem;
				}

				.article-title {
					font-size: 1.75rem;
				}

				.article-content p,
				.article-content ul,
				.article-content ol {
					font-size: 1rem;
				}
			}
		</style>
	</head>

	<body>
		<Header />
		<main>
			<article>
				<header class="article-header">
					<a href="/blog" class="back-link">
						<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
							<path d="M19 12H5M12 19l-7-7 7-7"/>
						</svg>
						Back to Blog
					</a>
					<h1 class="article-title">{title}</h1>
					<div class="article-meta">
						<span class="article-author">Neuroship Team</span>
						<span class="article-date">
							<FormattedDate date={pubDate} />
						</span>
					</div>
					{updatedDate && (
						<p class="updated-date">
							Last updated on <FormattedDate date={updatedDate} />
						</p>
					)}
				</header>
				
				{heroImage && (
					<div class="hero-image">
						<img src={heroImage} alt="" />
					</div>
				)}
				
				<div class="article-content">
					<slot />
				</div>
			</article>
		</main>
		<Footer />
	</body>
</html>
